<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutMainLevel"
    android:background="@drawable/bg_challenge_level"
    android:layout_margin="@dimen/_3sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgChallengeLevel"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/img_bronze"
        android:layout_margin="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvChallengeTitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/poppins"
        android:text="@string/beginner_1"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgChallengeLevel"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTotalDrawings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:fontFamily="@font/poppins"
        android:text="@string/_45_drawings"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvChallengeTitle"
        app:layout_constraintStart_toEndOf="@+id/tvChallengeTitle"
        app:layout_constraintTop_toTopOf="@+id/tvChallengeTitle" />




    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvChallengeContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:visibility="gone"
        android:maxLines="2"
        android:layout_marginTop="2dp"
        android:padding="2dp"
        android:text="@string/_50_users_are_participating_in_this_challenge"
        android:textColor="@color/black_alpha_95"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/appCompatImageView9"
        app:layout_constraintStart_toStartOf="@+id/tvChallengeTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvChallengeTitle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView9"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="@dimen/_3sdp"
        android:tint="@color/colorMain"
        android:src="@drawable/img_arrow_forward"
        app:layout_constraintBottom_toBottomOf="@+id/imgChallengeLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgChallengeLevel" />

</androidx.constraintlayout.widget.ConstraintLayout>