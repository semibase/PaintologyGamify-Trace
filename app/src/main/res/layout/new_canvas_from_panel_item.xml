<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        style="@style/CardViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp_05">

                <ImageView
                    android:id="@+id/iv_new_canvas"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/blank_canvas_white_canvas"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blank"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <View
                    android:id="@+id/selection_blank"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/rounded_button_positive" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp_05">

                <ImageView
                    android:id="@+id/iv_new_ovarlay"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/overlay_image_white_canvas"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overlay"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <View
                    android:id="@+id/selection_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/rounded_button_positive" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp_05">

                <ImageView
                    android:id="@+id/iv_new_trace"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/trace_icon_white_canvas"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trac"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <View
                    android:id="@+id/selection_trace"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/rounded_button_positive" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp_05">

                <ImageView
                    android:id="@+id/iv_new_camera"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/camera_icon_white_canvas"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <View
                    android:id="@+id/selection_camera"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/rounded_button_positive" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>