<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rounded_corners"
    android:orientation="vertical">

    <!--  <AbsoluteLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/background2"
          android:orientation="horizontal">

      </AbsoluteLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header_color"
            android:gravity="left"
            android:padding="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_05"
            android:text="@string/unfollow"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left"
            android:padding="@dimen/dp_10"
            android:text="@string/do_you_wan_t_to_unfollow_ankit"
            android:textAllCaps="false"
            android:textColor="@color/header_color"
            android:textSize="18sp"
            android:textStyle="normal" />


        <LinearLayout
            android:id="@+id/urlLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_05"
            android:paddingBottom="@dimen/dp_05">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_05"
                android:background="@drawable/rounded_corner_red"
                android:gravity="center"
                android:padding="@dimen/dp_08"
                android:text="@string/cancel"
                android:textColor="@color/header_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btn_unfollow"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_filled_new"
                android:gravity="center"
                android:padding="@dimen/dp_08"
                android:text="@string/unfollow"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>