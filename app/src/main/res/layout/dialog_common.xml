<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rate_dialog_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat Unavailable"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You must follow Bochhi and be followed back to start chatting. Make sure both of you follow each other to unlock chat."
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnClosee"
        android:background="@drawable/bg_btn_dialog_rounded_blue"
        android:layout_width="100dp"
        android:gravity="center"
        android:textSize="17sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/white"
        android:layout_height="50dp"
        android:text="Close"
        android:layout_below="@id/tvMessage"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
